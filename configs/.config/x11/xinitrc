#!/bin/bash

setxkbmap -layout pl
xwallpaper --zoom ~/Pictures/bg.jpg
/usr/bin/prime-offload

dunst &

while true
do
	LIGHT="ðŸ’¡ $(brightnessctl -m | awk -F, '{print $4}')"
	VOL="ðŸ”Š $(amixer get Master | tail -1 | sed 's/.*\[\([0-9]*%\)\].*/\1/')"
    TIME=$(date +"%d.%m.%Y %H:%M")
    WIFI="$(awk '/^\s*w/ { print "ðŸ“¶", int($3 * 100 / 70) "% " }' /proc/net/wireless)"
	BAT="ðŸ”‹ $(cat /sys/class/power_supply/BAT1/capacity)%"

	xsetroot -name "$LIGHT | $VOL | $WIFI | $BAT | $TIME"
	sleep 30s
done &

exec dwm
